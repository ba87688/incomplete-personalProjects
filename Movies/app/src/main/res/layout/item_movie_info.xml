<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/image_view"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@tools:sample/backgrounds/scenic"/>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/image_view_bookmark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="9dp"
        tools:text="Android"
        android:textColor="#000000"
        android:maxLines="2"
        android:textSize="23dp"
        android:ellipsize="end"
        android:id="@+id/text_view_title"/>



    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title"
        android:layout_margin="9dp"
        android:text="@string/release_date"
        android:textColor="#000000"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/text_title_release_text"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/text_title_release_text"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title"
        android:layout_margin="9dp"
        tools:text="release date"
        android:textColor="#000000"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/text_title_release"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title_release"
        android:layout_margin="9dp"
        android:text="@string/genre"
        android:textColor="#000000"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/text_title_genre_text"/>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/text_title_genre_text"
        app:layout_constraintTop_toBottomOf="@+id/text_title_release"
        android:layout_margin="9dp"
        tools:text="genre"
        android:textColor="#000000"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/text_title_genre"/>

    <ImageView
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_margin="9dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/bookmark_unselected"
        android:id="@+id/image_view_bookmark"/>













</androidx.constraintlayout.widget.ConstraintLayout>